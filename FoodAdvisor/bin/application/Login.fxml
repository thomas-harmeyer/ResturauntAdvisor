<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text fill="#1d32a3" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To FoodAdvisor" textAlignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" prefWidth="500.0">
               <children>
                  <VBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefWidth="200.0">
                     <children>
                        <TextField fx:id="usernameTextField" />
                        <TextField fx:id="passwordTextField" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="newButton" mnemonicParsing="false" onAction="#newButtonClick" text="New User" />
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClick" text="Login" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
